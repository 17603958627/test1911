<body class="hold-transition skin-blue sidebar-mini">
<div class="wrapper">

  <%- include('./header.ejs') %>
 
  <%- include('./menu.ejs') %>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        添加产品
        <small>Optional description</small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>
        <li class="active">Here</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content container-fluid">

      <div class="box box-info">
        <!-- form start -->
        <form class="form-horizontal" action="/pro/addAction" method="POST">
          <div class="box-body">
            <div class="form-group">
              <label for="type" class="col-sm-2 control-label">产品分类</label>

              <div class="col-sm-10">
                <input type="text" name="type" class="form-control" id="type" placeholder="产品分类" >
              </div>
            </div>
            <div class="form-group">
              <label for="proname" class="col-sm-2 control-label">产品标题</label>

              <div class="col-sm-10">
                <input type="text" name="proname" class="form-control" id="proname" placeholder="产品标题">
              </div>
            </div>
            <div class="form-group">
              <label for="price" class="col-sm-2 control-label">产品价格</label>

              <div class="col-sm-10">
                <input type="text" name="price" class="form-control" id="price" placeholder="产品价格">
              </div>
            </div>
            <div class="form-group">
                <label for="detail" class="col-sm-2 control-label">产品详情</label>
  
                <div class="col-sm-10">
                  <input type="text" name="detail" class="form-control" id="detail" placeholder="产品详情">
                </div>
              </div>
            <div class="form-group">
              <label for="proimg" class="col-sm-2 control-label">产品图片</label>

              <div class="col-sm-10">
                <input type="text" name="proimg" class="form-control" id="proimg" placeholder="产品图片地址">
              </div>
            </div>
            <div class="form-group">
              <label for="stock" class="col-sm-2 control-label">产品库存</label>

              <div class="col-sm-10">
                <input type="text" name="stock" class="form-control" id="stock" placeholder="产品库存">
              </div>
            </div>
            <div class="form-group">
              <label for="sales" class="col-sm-2 control-label">产品销量</label>

              <div class="col-sm-10">
                <input type="text" name="sales" class="form-control" id="sales" placeholder="产品销量">
              </div>
            </div>
            <div class="form-group">
              <label for="activity" class="col-sm-2 control-label">是否活动</label>

              <div class="col-sm-10">
                <input type="radio" name="activity" value="1"> 活动
                <input type="radio" name="activity" value="0"> 不活动
              </div>
            </div>
            <div class="form-group">
              <label for="select" class="col-sm-2 control-label">是否精选</label>

              <div class="col-sm-10">
                <input type="radio" name="select" value="1"> 精选
                <input type="radio" name="select" value="0"> 不精选
              </div>
            </div>
            <div class="form-group">
              <label for="newgoods" class="col-sm-2 control-label">是否新品</label>

              <div class="col-sm-10">
                <input type="radio" name="newgoods" value="1"> 新品
                <input type="radio" name="newgoods" value="0"> 不新品
              </div>
            </div>
            <div class="form-group">
              <label for="freeship" class="col-sm-2 control-label">是否包邮</label>

              <div class="col-sm-10">
                <input type="radio" name="freeship" value="1"> 包邮
                <input type="radio" name="freeship" value="0"> 不包邮
              </div>
            </div>
          </div>
          <!-- /.box-body -->
          <div class="box-footer">
            <div class="form-group ">
                <label for="detail" class="col-sm-2 control-label"></label>
  
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-info">提交</button>
                </div>
              </div>
          </div>
          <!-- /.box-footer -->
        </form>
      </div>

    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

  <%- include('./footer.ejs') %>

  <%- include('./sidebar.ejs') %>
  <!-- /.control-sidebar -->
  <!-- Add the sidebar's background. This div must be placed
  immediately after the control sidebar -->
  <div class="control-sidebar-bg"></div>
</div>
<!-- ./wrapper -->

<!-- REQUIRED JS SCRIPTS -->

<!-- jQuery 3 -->
<script src="/bower_components/jquery/dist/jquery.min.js"></script>
<!-- Bootstrap 3.3.7 -->
<script src="/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
<!-- AdminLTE App -->
<script src="/dist/js/adminlte.min.js"></script>

<!-- Optionally, you can add Slimscroll and FastClick plugins.
     Both of these plugins are recommended to enhance the
     user experience. -->
</body>
</html>